package speed.distance.time;
import java.util.Scanner;

/**
 *
 * @author Karen
 */
public class SpeedDistanceTime {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        float speed, distance, time;
        int option;
        Scanner read=new Scanner(System.in);
        System.out.print("\n 1.Find the speed ");
        System.out.print("\n 2.Find the distance ");
        System.out.print("\n 3.Find the time ");
        System.out.print("\n 4.Leave ");
        System.out.print("\n Enter a option: ");
        option=read.nextInt();
        
        switch(option)
        {
            case 1:float speed1;
                System.out.print("\n Enter the distance: ");
                distance=read.nextFloat();
                System.out.print("\n Enter the time: ");
                time=read.nextFloat();
                speed1=distance/time;
                System.out.println("\n The calculated speed is: " + speed1);
                
            break;
            case 2:float distance1;
                System.out.print("\n Enter the speed: ");
                speed=read.nextFloat();
                System.out.print("\n Enter the time: ");
                time=read.nextFloat();
                distance1=speed*time;
                System.out.println("\n The calculated distance is: " + distance1);
            break;
            case 3: float time1;
                System.out.print("\n Enter the speed: ");
                speed=read.nextFloat();
                System.out.print("\n Enter the distance: ");
                distance=read.nextFloat();
                time1=speed*distance;
                System.out.println("\n The calculated time is: " + time1);
            break;
            case 4:
            break;
        }
    }
    

}
